          <form action="">
            <div class="form-list">
              <div class="form-item">
                <input type="text" placeholder="Name*">
              </div>
              <div class="form-item">
                <input type="email" placeholder="Email*">
              </div>

              <div class="form-item">
                <input type="tel" placeholder="Phone">
              </div>
              <div class="form-item">
                <textarea type="text" placeholder="message"></textarea>
              </div>
